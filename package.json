{
  "name": "bedybot-db",
  "version": "2023.06.1",
  "description": "Database model and migration or BedyBot tools",
  "main": "dbSchema.js",
  "scripts": {
    "start": "node src/test",
    "startTest2": "node src/testContext",
    "eslint": "eslint .",
    "eslintFix": "eslint . --fix",
    "cleanState": "npm ci",
    "migrate:dbCreate": "npx sequelize db:create",
    "migrate:up": "npx sequelize-cli db:migrate",
    "migrate:seed": "npx sequelize-cli db:seed:all",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "migrate:undoAll": "npx sequelize-cli db:migrate:undo:all",
    "migrate:undoTo": "npx sequelize-cli db:migrate:undo:all --to XXXXXXXXXXXXXX.js",
    "migrate:create": "npx sequelize-cli migration:generate --name=$1",
    "prepare:db": "npm run migrate:dbCreate && npm run migrate:up && npm run migrate:seed",
    "package:pack": "npm pack --pack-destination ./dist",
    "test:js_run": "mocha ./tests/*.spec.js --timeout 10000",
    "test:js_run2": "mocha --timeout 10000",
    "test:downDB": "set NODE_ENV=test&& npm run migrate:undoAll",
    "test:updateDb": "set NODE_ENV=test&& npm run migrate:up && npm run migrate:seed",
    "test:restoreDB": "set NODE_ENV=test&& npm run test:downDB && npm run test:updateDb && npm run test:noRestore",
    "test:noRestore": "set NODE_ENV=test&& nyc --nycrc-path=./tests/config/.nycrc_base.json mocha --timeout=10000",
    "test:git_json": "npm run test:downDB && npm run test:updateDb && npx nyc --nycrc-path=./tests/config/.nycrc_git_json.json mocha --timeout=10000",
    "test:git_html":"npm run test:downDB && npm run test:updateDb && npx nyc --nycrc-path=./tests/config/.nycrc_git_html.json mocha --timeout=10000"
  },
  "engines": {
    "node": ">=18.0.0"
  }, 
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MBelangerB/BedyBot-db.git"
  },
  "author": "Elmat90",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MBelangerB/BedyBot-db/issues"
  },
  "homepage": "https://github.com/MBelangerB/BedyBot-db#readme",
  "devDependencies": {
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "eslint": "^8.48.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sequelize-cli": "^6.6.1"
  },
  "dependencies": {
    "cron-validate": "^1.4.5",
    "mysql2": "^3.6.0",
    "sequelize": "^6.33.0",
    "uuid": "^9.0.0"
  }
}